<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <%= link_to "takeabreak", root_path, id: "logo" %>
    <nav role="navigation">
      <button type="button" class="navbar-toggle pull-left hidden-md hidden-lg" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only ">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav navbar-right navr">
          <li class="navrli"><%= link_to "Relax", break_path %></li>
          <% if logged_in? %>
            <li class="navrli dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li class="navrli"><%= link_to "Profile", current_user %></li>
                <li class="navrli"><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li class="navrli">
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="navrli"><%= link_to "Login", login_path %></li>
            <li class="navrli"><%= link_to "Signup", signup_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
